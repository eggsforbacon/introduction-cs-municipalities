<Window x:Class="introduction_cs_municipalities.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:introduction_cs_municipalities"
        mc:Ignorable="d"
        Title="Localities DataBase" Height="600" Width="800"
        ResizeMode="NoResize">
    <StackPanel>
        <DataGrid x:Name="DataGrid"
                  Height="440" AutoGenerateColumns="false">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header ="Código Departamento" Binding="{Binding t}" Width="150"/>
                <DataGridTextColumn Header ="Código Municipio" Binding="{Binding v}" Width="150"/>
                <DataGridTextColumn Header ="Nombre Departamento" Binding="{Binding c}" Width="150"/>
                <DataGridTextColumn Header ="Nombre Municipio" Binding="{Binding d}" Width="150"/>
                <DataGridTextColumn Header ="Tipo" Binding="{Binding e}" Width="*"/>
            </DataGrid.Columns>
            <DataGridColumnHeadersPresenter Background="#5A81DB" MinHeight="55px"></DataGridColumnHeadersPresenter>
        </DataGrid>
        <StackPanel Background="#5A81DB"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0, 50, 0, 50">
                <ComboBox  Name ="ComboBox" Margin="50, 0, 130, 0"
                      Width="245"
                      Foreground="Black"
                      FontSize="20"
                      FontWeight="Bold"
                      Background="#5AA3DB"
                      Padding="10, 5, 10, 5" FontFamily="Palatino Linotype" Text="Filtrar por departamento" SelectedIndex="0" SelectionChanged="selectionChange"/>
                <Button Content="Generate Report" Click="ShowReport"
                    Margin="130, 0, 50, 0"
                    Foreground="#FFFFFF"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#5AA3DB"
                    Padding="10, 5, 10, 5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
